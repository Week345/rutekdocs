<Window x:Class="Calc1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calc1"
        mc:Ignorable="d"
        Title="Prosty kalkulator - Wiktor Kulikowski" Height="450" Width="800">
    <Grid>
        <Label Content="Witamy w prostym kalkulatorze" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="359" FontSize="25"/>
        <Label Content="Liczba 1" HorizontalAlignment="Left" Margin="140,70,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Liczba 2" HorizontalAlignment="Left" Margin="140, 130,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="num1" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="28" FontSize="20"/>
        <TextBox x:Name="num2" HorizontalAlignment="Center" Margin="0,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="28" FontSize="20"/>
        <Button Content="Dodanie" HorizontalAlignment="Center" Margin="292,217,292,0" VerticalAlignment="Top" Width="216" Height="37" FontSize="25" Click="Button_Click"/>
        <Label x:Name="wynik" Content="Wynik: 0" HorizontalAlignment="Center" Margin="0,343,0,0" VerticalAlignment="Top" FontSize="20" IsEnabled="False"/>
        <Label Content="Wynik wynosi:" HorizontalAlignment="Left" Margin="45,343,0,0" VerticalAlignment="Top" FontSize="20"/>

    </Grid>
</Window>
